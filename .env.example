# CAPIbara Configuration

# ===== REQUIRED CONFIGURATION =====
# These settings control core application behavior

# Server Configuration
PORT=8080

# Debug Configuration
DEBUG_LOGGING=false
DEBUG_MAX_ENTRIES=100
LOG_UNMATCHED_EVENTS=true

